<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UiLibTitleBar">
        <attr name='title_text' format="string" />
        <attr name='title_textSize' format="dimension" />
        <attr name='title_textColor' format="color" />
        <attr name='title_style' format="integer" />
        <attr name='title_singleLine' format="boolean" />
        <attr name='title_paddingLeft' format="dimension" />
        <attr name='title_paddingRight' format="dimension" />
        <attr name='title_paddingTop' format="dimension" />
        <attr name='title_paddingBottom' format="dimension" />
        <attr name='title_padding' format="dimension" />
        <attr name='title_visibility' format="integer">
            <enum name="gone" value="8" />
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
        </attr>

        <attr name='left_text' format="string" />
        <attr name='left_textSize' format="dimension" />
        <attr name='left_textColor' format="color" />
        <attr name='left_style' format="integer" />
        <attr name='left_singleLine' format="boolean" />
        <attr name='left_paddingLeft' format="dimension" />
        <attr name='left_paddingRight' format="dimension" />
        <attr name='left_paddingTop' format="dimension" />
        <attr name='left_paddingBottom' format="dimension" />
        <attr name='left_padding' format="dimension" />
        <attr name='left_drawable' format="reference|color" />
        <attr name='left_onclick_back' format="boolean" />
        <attr name='left_drawablePadding' format="dimension" />
        <attr name='left_background' format="reference|color" />
        <attr name='left_visibility' format="integer">
            <enum name="gone" value="8" />
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
        </attr>

        <attr name='right_text' format="string" />
        <attr name='right_textSize' format="dimension" />
        <attr name='right_textColor' format="reference|color" />
        <attr name='right_style' format="integer" />
        <attr name='right_singleLine' format="boolean" />
        <attr name='right_paddingLeft' format="dimension" />
        <attr name='right_paddingRight' format="dimension" />
        <attr name='right_paddingTop' format="dimension" />
        <attr name='right_paddingBottom' format="dimension" />
        <attr name='right_padding' format="dimension" />
        <attr name='right_drawable' format="reference|color" />
        <attr name='right_drawablePadding' format="dimension" />
        <attr name='right_background' format="reference|color" />
        <attr name='right_visibility' format="integer">
            <enum name="gone" value="8" />
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
        </attr>

        <attr name='bottom_style' format="integer" />
        <attr name='bottom_layout_height' format="dimension" />
        <attr name='bottom_background' format="reference|color" />
        <attr name='bottom_visibility' format="integer">
            <enum name="gone" value="8" />
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
        </attr>

        <attr name='titleBarHeight' format="dimension" />
        <attr name='title_maxWidthOff' format="dimension" />
    </declare-styleable>


    <declare-styleable name="UiLibRefreshLayout">
        <attr name="refresh_enabled" format="boolean" />
        <attr name="load_more_enabled" format="boolean" />

        <attr name="swipe_style" format="enum">
            <enum name="classic" value="0" />
            <enum name="above" value="1" />
            <enum name="blew" value="2" />
            <enum name="scale" value="3" />
        </attr>

        <attr name="drag_ratio" format="float" />

        <attr name="refresh_trigger_offset" format="dimension" />
        <attr name="load_more_trigger_offset" format="dimension" />
        <attr name="refresh_final_drag_offset" format="dimension" />
        <attr name="load_more_final_drag_offset" format="dimension" />

        <attr name="swiping_to_refresh_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_refreshing_scrolling_duration" format="integer" />
        <attr name="refresh_complete_delay_duration" format="integer" />
        <attr name="refresh_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_refreshing_scrolling_duration" format="integer" />
        <attr name="swiping_to_load_more_to_default_scrolling_duration" format="integer" />
        <attr name="release_to_loading_more_scrolling_duration" format="integer" />
        <attr name="load_more_complete_delay_duration" format="integer" />
        <attr name="load_more_complete_to_default_scrolling_duration" format="integer" />
        <attr name="default_to_loading_more_scrolling_duration" format="integer" />

        <attr name="template" format="enum">
            <enum name="normal" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AdvTextSwitcher">
        <attr name="textSize" format="dimension" />
        <attr name="gravity">
            <flag name="right" value="0x01" />
            <flag name="left" value="0x02" />
            <flag name="center" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PickerView">
        <attr name="isLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UiLibBlurringView">
        <attr name="blurRadius" format="integer" />
        <attr name="downsampleFactor" format="integer" />
        <attr name="overlayColor" format="color" />
    </declare-styleable>
</resources>